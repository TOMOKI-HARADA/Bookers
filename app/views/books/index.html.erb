 <h1>BOOKS</h1>
  <table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", book_path(book.id) %>
<%= link_to "edit", edit_book_path(book.id) %>
<%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？"  %>
</td>
</tr>
<% end %>
</tbody>
</table>
</tr>

   </table>


<h2>NEW BOOK</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
<% if @book.errors.any? %>
  <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
   <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
   </ul>
 <% end %>

  
 
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
