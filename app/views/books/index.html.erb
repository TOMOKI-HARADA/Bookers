 <h1>BOOKS</h1>
  <table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", book_path(book.id) %>
<%= link_to "edit", edit_book_path(book.id) %>
<%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？"  %>
</td>
</tr>
<% end %>
</tbody>
</table>
</tr>

   </table>


<h2>新規投稿</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<%= f.submit '投稿' %>
<% end %>
