<p><% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div><p></p>
    <% end %>

<h2>Editing Book</h2>
<%= form_with model:@book, local: true do |f| %>
<% if @book.errors.any? %>
  <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
   <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
   </ul>
 <% end %>

<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>
<%= link_to 'show', book_path %>
<%= link_to 'back', books_path %>